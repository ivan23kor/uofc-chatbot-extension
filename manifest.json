{
  "manifest_version": 3,
  "name": "UofC ChatBot Extension",
  "version": "1.0.0",
  "description": "UofC ChatBot Extension for academic assistance",
  "icons": {
    "128": "icons/icon-128.png",
    "48": "icons/icon-48.png",
    "32": "icons/icon-32.png",
    "16": "icons/icon-16.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "sidePanel",
    "nativeMessaging"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "action": {
    "default_title": "Open UofC ChatBot",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  }
}