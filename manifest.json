{
  "manifest_version": 3,
  "name": "UofC ChatBot Extension",
  "version": "1.0.0",
  "description": "UofC ChatBot Extension for academic assistance",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "sidePanel"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "action": {
    "default_title": "Open UofC ChatBot"
  }
}